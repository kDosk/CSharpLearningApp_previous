<Page x:Class="CSharpLearningApp.TagirBranch.PracticePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CSharpLearningApp.TagirBranch"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PracticePage">

    <Grid Style="{StaticResource GridDesign}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Основные понятия" Grid.Column="1" Grid.Row="0" FontSize="20" HorizontalAlignment="Center" FontFamily="Times new Roman" Style="{StaticResource BlockDesign}" VerticalAlignment="Center"/>
        <Button x:Name="ExitButton" Content="Выйти" Margin="5" Height="30" Width="150" Style="{StaticResource ButtonDesign}" HorizontalAlignment="Right" VerticalAlignment="Center" Click="ExitButton_Click"/>
        <TextBlock x:Name="TextBlockTextss" Style="{StaticResource BlockDesign}"  Margin="10" Grid.Row="1" TextWrapping= "Wrap"  FontSize="20" FontFamily="Times new Roman"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="1" Style="{StaticResource BlockDesignSmall}" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" />
                <TextBox Height="30" Width="100" TextAlignment="Center" Margin="10" x:Name="Textb1" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="2" Style="{StaticResource BlockDesignSmall}" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                <TextBox Height="30" Width="100" TextAlignment="Center" Margin="10" x:Name="Textb2" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="3" Style="{StaticResource BlockDesignSmall}" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                <TextBox Height="30" Width="100" TextAlignment="Center" Margin="10" x:Name="Textb3" />
            </StackPanel>
            <Button x:Name="ButtonCheck" Content="Проверка" Height="auto" Width="auto" Click="ButtonCheck_Click" Style="{StaticResource ButtonDesign}"/>
        </StackPanel>

    </Grid>
</Page>
