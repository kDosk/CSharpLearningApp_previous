<Page x:Class="CSharpLearningApp.Templates.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CSharpLearningApp.Templates"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
		<ListView Style="{StaticResource ListViewDefault}">
			s
			<ListView.ItemTemplate>
				<DataTemplate>
					<Border BorderBrush="{StaticResource SecondaryColorBrush}" BorderThickness="3" CornerRadius="20" Height="auto" Width="500">
						<Grid Margin="10">
							<Grid.RowDefinitions>
								<RowDefinition Height="auto"/>
								<RowDefinition Height="auto"/>
							</Grid.RowDefinitions>

							<Border BorderBrush="{StaticResource SecondaryColorBrush}" BorderThickness="0 0 0 3">
								<Button Style="{StaticResource NavigationButton}" Content="Заголовок"/>
							</Border>
							
							<Grid Grid.Row="1">
								<ListView Style="{StaticResource ListViewDefault}">
									
									<ListView.ItemTemplate>
										<DataTemplate>
											<Button Style="{StaticResource NavigationButton}" Content="Подзаголок" Margin="30 0"/>
										</DataTemplate>
									</ListView.ItemTemplate>
								</ListView>
							</Grid>
						</Grid>
					</Border>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
    </Grid>
</Page>
