<Window x:Class="CSharpLearningApp.Templates.ThemeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpLearningApp.Templates"
        mc:Ignorable="d"
        Title="ThemeWindow" Height="720" Width="1280">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="70"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Grid Background="{StaticResource PrimaryColorBrush}">
			<TextBlock Style="{StaticResource TextBlockH1}" Text="Theme name" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="32"/>
		</Grid>
		
		<ContentPresenter x:Name="ThemeWindowMainFrame" Grid.Row="1"/>

	</Grid>
</Window>
