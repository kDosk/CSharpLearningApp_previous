<Window x:Class="CSharpLearningApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpLearningApp"
        mc:Ignorable="d"
        Title="Приложение изучения языка программирования C#" MinHeight="500" MinWidth="800" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

		<Grid Background="{StaticResource PrimaryColorBrush}">
			<TextBlock Text="Основы программирования на C#" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource TextBoxH1}" Margin="30 0"/>
		</Grid>
		<StackPanel Orientation="Horizontal" Margin="10 0" HorizontalAlignment="Right">
            
            <Button x:Name="MainButton" Content="Пользователь" Click="NavigateButton_Click" Style="{StaticResource DefaultButton}" VerticalAlignment="Center" Width="170" Height="35" HorizontalAlignment="Right"/>
        </StackPanel>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Window>
