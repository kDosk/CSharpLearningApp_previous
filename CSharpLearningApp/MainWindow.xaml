<Window x:Class="CSharpLearningApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpLearningApp"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="480" MinWidth="800" MaxHeight="720" MaxWidth="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Основы программирования на C#" HorizontalAlignment="Center"/>

        <Grid Grid.Row="1">
            <StackPanel Grid.Column="0">
                <Button Content="Переменные и константы" Click="NavigateButton_Click"/>
                <Button Content="Типы данных" Click="NavigateButton_Click"/>
                <Button Content="Арифметические вычисления" Click="NavigateButton_Click"/>
                <Button Content="Операции присваивания" Click="NavigateButton_Click"/>
                <Button Content="Преобразование базовых типов данных" Click="NavigateButton_Click"/>
                <Button Content="Условные выражения" Click="NavigateButton_Click"/>
                <Button Content="Циклы" Click="NavigateButton_Click"/>
                <Button Content="Массивы" Click="NavigateButton_Click"/>
                <Button Content="Методы" Click="NavigateButton_Click"/>
                <Button Content="Возвращение значения и оператор return" Click="NavigateButton_Click"/>
                <Button Content="Перечисления enum" Click="NavigateButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
