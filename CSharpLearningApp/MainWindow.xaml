<Window x:Class="CSharpLearningApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpLearningApp"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="480" MinWidth="800" MaxHeight="720" MaxWidth="1280">
    <Grid Style="{StaticResource GridDesign}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Основы программирования на C#" HorizontalAlignment="Center" Style="{StaticResource BlockDesign}" VerticalAlignment="Center"/>

        <StackPanel Grid.Row="1" Width="500">
            <Button Content="Переменные и константы" Click="NavigateButton_Click" Style="{StaticResource ButtonDesign}" Margin="0 5"/>
            <Button Content="Типы данных" Click="NavigateButton_Click" Style="{StaticResource ButtonDesign}" Margin="0 5"/>
            <Button Content="Арифметические вычисления" Click="NavigateButton_Click" Style="{StaticResource ButtonDesign}" Margin="0 5"/>
            <Button Content="Операции присваивания" Click="NavigateButton_Click" Style="{StaticResource ButtonDesign}" Margin="0 5"/>
            <Button Content="Преобразование базовых типов данных" Click="NavigateButton_Click" Style="{StaticResource ButtonDesign}" Margin="0 5"/>
            <Button Content="Условные выражения" Click="NavigateButton_Click" Style="{StaticResource ButtonDesign}" Margin="0 5"/>
            <Button Content="Циклы" Click="NavigateButton_Click" Style="{StaticResource ButtonDesign}" Margin="0 5"/>
            <Button Content="Массивы" Click="NavigateButton_Click" Style="{StaticResource ButtonDesign}" Margin="0 5"/>
            <Button Content="Методы" Click="NavigateButton_Click" Style="{StaticResource ButtonDesign}" Margin="0 5"/>
            <Button Content="Возвращение значения и оператор return" Click="NavigateButton_Click" Style="{StaticResource ButtonDesign}" Margin="0 5"/>
            <Button Content="Перечисления enum" Click="NavigateButton_Click" Style="{StaticResource ButtonDesign}" Margin="0 5"/>
        </StackPanel>
    </Grid>
</Window>
