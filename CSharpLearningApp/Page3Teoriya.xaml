<Page x:Class="CSharpLearningApp.Page3Teoriya"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CSharpLearningApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3Teoriya">

    <Grid Style="{StaticResource GridDesign}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Text="Сокращенная запись методов" Style="{StaticResource BlockDesign}" FontFamily="Times New Roman" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25"/>
            <Button x:Name="ExitButton" Content="Выйти" Margin="700,0,0,5" Height="30" Width="150" Style="{StaticResource  ButtonDesign}" HorizontalAlignment="Left" VerticalAlignment="Center" Click="ButtonExit_Click"/>
        </Grid>
        <ScrollViewer Grid.Row="1">
            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="TexstBlockTexstss2" Style="{StaticResource BlockDesign}" Margin="10" Grid.Row="1" TextWrapping="Wrap" FontSize="20" FontFamily="Times new Roman"/>
                <Button x:Name="TestButton" Content="Проверить свои знания" Style="{StaticResource ButtonDesign}" Margin="10" Height="30" Width="240" Grid.Row="0" HorizontalAlignment="Center" Click="TestButton_Click"/>
                <TextBlock TextWrapping="Wrap" Text="Ответственная за модуль: Еникеева Линиза" Style="{StaticResource BlockDesign}" Margin="13,232,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>

</Page>
